{% extends "base.html" %}
{% block title %}{{ _('Signup user page') }}{% endblock %}
{% block styles %}
    {{super()}}
<link rel="stylesheet"
      href="{{url_for('.static', filename='css/small-business.css')}}">
{% endblock %}
{% block content %}
{% include 'navbar.jinja2' %}

  <div class="container">

    {% for message in get_flashed_messages() %}
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ message }}
      </div>
    {% endfor %}

  <h1 class="font-weight-light">{{ _('Signup user page') }}.</h1>
      <form action={{url_for("auth_bp.signup")}} method="post">
      {{ form.hidden_tag() }}
            <div class="container">
                <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Signup user area') }}</legend>
                    <div class="row">
                        <div class="col-3">
                            {{ form.name.label }}:
                        </div>
                        <div class="col">
                            {{ form.name(placeholder='Eladio Rego') }}
                            {% if form.name.errors %}
                              <ul class="errors">
                                {% for error in form.email.errors %}
                                  <li>{{ error }}</li>{% endfor %}
                              </ul>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            {{ form.email.label }}:
                        </div>
                        <div class="col">
                            {{ form.email(placeholder='email@ejemplo.com') }}
                            {% if form.email.errors %}
                              <ul class="errors">
                                {% for error in form.email.errors %}
                                  <li>{{ error }}</li>{% endfor %}
                              </ul>
                            {% endif %}
                        </div>
                    </div>

                   <div class="row">
                        <div class="col-3">
                            {{ form.password.label }}:
                        </div>
                        <div class="col">
                            {{ form.password }}
                            {% if form.password.errors %}
                              <ul class="errors">
                                {% for error in form.password.errors %}
                                  <li>{{ error }}</li>{% endfor %}
                              </ul>
                            {% endif %}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            {{ form.confirm.label }}:
                        </div>
                        <div class="col">
                            {{ form.confirm }}
                            {% if form.confirm.errors %}
                              <ul class="errors">
                                {% for error in form.confirm.errors %}
                                  <li>{{ error }}</li>{% endfor %}
                              </ul>
                            {% endif %}
                        </div>
                    </div>
                   <div class="row">
                        <div class="col-3">
                            {{ form.is_admin.label(class_="form-check-label") }}:
                        </div>
                        <div class="col">
                            {{ form.is_admin }}
                        </div>

                    </div>
                <div class="row">
                     <div class="submit-button">
                        {{ form.submit }}
                    </div>
                </div>

                </fieldset>

            </div>



    </form>


  </div>
{% endblock %}