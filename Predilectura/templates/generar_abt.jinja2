{% extends "base.html" %}
{% block title %}{{ _('Analysis Base Table generation page')}}{% endblock %}
{% block styles %}
    {{super()}}
<link rel="stylesheet"
      href="{{url_for('.static', filename='css/small-business.css')}}">
{% endblock %}
{% block content %}
{% include 'navbar.jinja2' %}
    <div class="container-fluid">
    <form action={{url_for("create_abt")}} method="post">
            <div class="container">
                <h1 class="font-weight-light">{{ _('Generation of the Base Analysis Table')}}.</h1>
             <h2 class="font-weight-light">{{ _('SELECTION OF CHARACTERISTICS OF THE DOMAIN CONCEPTS')}}</h2>
            <p>
                {{ _('In this section we will choose the characteristics of the data we have in order to create a data analysis table that we will use in the prediction algorithms.
                To do so, we will create concepts of the domain from which we will derive the resulting features')}}.
            </p>

                <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Output Format')}}</legend>
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                {{ form.output_format.label }}:
                                {{ form.output_format}}

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                {{ form.output_path.label }}:
                                {{ form.output_path}}
                            </div>
                        </div>
                    </div>
                </fieldset>

                <h3 class="font-weight-light ">{{ _('Domain')}}: {{ _('Reader data')}}</h3>
                <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Reader details')}}</legend>
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                {{ form.id_user(class_="form-check-input", disabled='disabled') }}
                                {{ form.id_user.label(class_="form-check-label") }}

                            </div>
                        </div>
                       <div class="col">
                       <div class="form-check">
                                {{ form.premium(class_="form-check-input") }}
                                {{ form.premium.label(class_="form-check-label") }}
                        </div>
                    </div>
                    </div>
                </fieldset>

                <h3 class="font-weight-light ">{{ _('Domain')}}: {{ _('Book data')}}</h3>
               <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Book details')}}</legend>
                   <div class="row">
                       <div class="col">
                           <div class="form-check">
                                {{ form.book(class_="form-check-input", disabled='disabled') }}
                                {{ form.book.label(class_="form-check-label") }}
                            </div>
                       </div>
                       <div class="col">
                            <div class="form-check">
                                {{ form.language(class_="form-check-input", disabled='disabled') }}
                                {{ form.language.label(class_="form-check-label") }}

                            </div>
                       </div>
                   </div>
                </fieldset>

                <h3 class="font-weight-light ">{{ _('Domain')}}: {{ _('Reading history')}}</h3>
                <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Chapter History')}}</legend>
                    <div class="row">
                        <div class="col">
                           <div class="form-check">
                                {{ form.chapters_readings(class_="form-check-input") }}
                                {{ form.chapters_readings.label(class_="form-check-label") }}
                            </div>
                            <div class="form-check">
                                {{ form.min_percent(class_="form-check-input") }}
                                {{ form.min_percent.label(class_="form-check-label") }}
                            </div>

                            <div class="form-check">
                                {{ form.max_percent(class_="form-check-input") }}
                                {{ form.max_percent.label(class_="form-check-label") }}
                            </div>

                            <div class="form-check">
                                {{ form.avg_percent(class_="form-check-input") }}
                                {{ form.avg_percent.label(class_="form-check-label") }}
                            </div>
                        </div>
                        <div class="col">
                           <div class="form-check">
                                {{ form.num_words(class_="form-check-input") }}
                                {{ form.num_words.label(class_="form-check-label") }}
                            </div>
                            <div class="form-check">
                                {{ form.min_words(class_="form-check-input") }}
                                {{ form.min_words.label(class_="form-check-label") }}
                            </div>
                            <div class="form-check">
                                {{ form.max_words(class_="form-check-input") }}
                                {{ form.max_words.label(class_="form-check-label") }}
                            </div>
                            <div class="form-check">
                                {{ form.avg_words(class_="form-check-input") }}
                                {{ form.avg_words.label(class_="form-check-label") }}
                            </div>
                        </div>
                    </div>
                </fieldset>

               <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Devices used')}}</legend>
                   <div class="row">
                       <div class="col">
                            <div class="form-check">
                                {{ form.devices_readings(class_="form-check-input") }}
                                {{ form.devices_readings.label(class_="form-check-label") }}
                            </div>
                       </div>
                       <div class="col">
                            <div class="form-check">
                                {{ form.versions_readings(class_="form-check-input") }}
                                {{ form.versions_readings.label(class_="form-check-label") }}
                            </div>
                       </div>
                   </div>
                </fieldset>

                <h3 class="font-weight-light ">{{ _('Domain')}}: {{ _('Event History')}}</h3>
                <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Event statistics')}}</legend>

                    <div class="row">
                        <div class="col">
                             <div class="form-check">
                                {{ form.event_classes(class_="form-check-input") }}
                                {{ form.event_classes.label(class_="form-check-label") }}
                            </div>
                            <div class="form-check">
                                {{ form.event_objs(class_="form-check-input") }}
                                {{ form.event_objs.label(class_="form-check-label") }}
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-check">
                                {{ form.event_types(class_="form-check-input") }}
                                {{ form.event_types.label(class_="form-check-label") }}
                            </div>
                        </div>

                    </div>
                </fieldset>

              <fieldset class="form-group border p-3">
                    <legend class="w-auto px-2">{{ _('Devices used')}}</legend>
                    <div class="row">
                        <div class="col">
                             <div class="form-check">
                                {{ form.devices_events(class_="form-check-input") }}
                                {{ form.devices_events.label(class_="form-check-label") }}
                            </div>
                            <div class="form-check">
                                {{ form.versions_events(class_="form-check-input") }}
                                {{ form.versions_events.label(class_="form-check-label") }}
                            </div>
                        </div>
                        <div class="col">
                             <div class="form-check">
                                {{ form.chapters_events(class_="form-check-input") }}
                                {{ form.chapters_events.label(class_="form-check-label") }}
                            </div>
                        </div>
                    </div>
                </fieldset>
                {{ form.submit(class_="btn btn-dark") }}
                <br>
            </div>

    </form>
    <a href="/datos" class="link_tfg">{{ _('Back to data management section')}}</a>
    <br><br>
    </div>
{% endblock %}